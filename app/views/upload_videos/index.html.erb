<p id="notice"><%= notice %></p>

<h1>Listing Upload Videos</h1>
<%= will_paginate @upload_videos %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tags</th>
      <th>Video desc</th>
      <th>Upload time</th>
      <th>Is approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upload_videos.each do |upload_video| %>
      <tr>
        <td><%= upload_video.title %></td>
        <td><%= upload_video.tags %></td>
        <td><%= upload_video.video_desc %></td>
        <td><%= upload_video.created_at.strftime("%m\\%d\\%Y %H:%M:%S")%></td>
        <td><%= (upload_video.is_approved == true ? "Yes" : "No") %></td>
        <td><%= link_to 'Show', upload_video %></td>
        <td><%= link_to 'Edit', edit_upload_video_path(upload_video) %></td>
        <td><%= link_to 'Destroy', { action: :destroy, id: upload_video.id }, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @upload_videos %>
<br>

<%= link_to 'New Upload video', new_upload_video_path %>
