<p id="notice"><%= notice %></p>

<h1>Listing Upload Videos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Video url</th>
      <th>Poster url</th>
      <th>Tags</th>
      <th>Video desc</th>
      <th>Is approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upload_videos.each do |upload_video| %>
      <tr>
        <td><%= upload_video.title %></td>
        <td><%= upload_video.video_url %></td>
        <td><%= upload_video.poster_url %></td>
        <td><%= upload_video.tags %></td>
        <td><%= upload_video.video_desc %></td>
        <td><%= upload_video.is_approved %></td>
        <td><%= link_to 'Show', upload_video %></td>
        <td><%= link_to 'Edit', edit_upload_video_path(upload_video) %></td>
        <td><%= link_to 'Destroy', upload_video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

