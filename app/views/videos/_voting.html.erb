<div class="video-vote">
  <%= link_to like_video_path(video), title: "like", class: "like", method: :put do %>
    <span>Upvote</span>
  <% end %>
  <span class="like-vote-<%= video.id %>"><%= video.get_upvotes.size %></span>

  <%= link_to unlike_video_path(video), title: "unlike", class: "unlike", method: :put do %>
    <span>Downvote</span>
  <% end %>
  <span class="unlike-vote-<%= video.id %>"><%= video.get_downvotes.size %></span>
</div>