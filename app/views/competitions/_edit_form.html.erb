<%= form_for(@competition, html: { class: 'directUploadCompetitionEdit', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>
  <% if @competition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@competition.errors.count, "error") %> prohibited this competition from being saved:</h2>

      <ul>
      <% @competition.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="error_msg">
    <ul></ul>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :size => 60, :max => 50, placeholder: "(between 2-50 characters)"%>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_area :desc, :cols => 100, :rows => 10, :max => 500, placeholder: "(less than 500 characters)" %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :period %><br>
    <%= f.text_field :period %>
  </div>
  <div class="field">
    <%= f.label :prize %><br>
    <%= f.text_field :prize %>
  </div>
  <div class="field">
    <%= f.label :prize_num %><br>
    <%= f.text_field :prize_num %>
  </div>
  <div class="field">
    <%= f.label :poster %><br>
    <input type="file" name="competition[poster]" id="competition_poster_update">
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
