

<h1></h1>
<div class="right-content-heading">
  <div class="right-content-heading-left">
    <h3>Listing Competitions</h3>
  </div>
  <div class="clear"> </div>
  <p id="notice"><%= notice %></p>
</div>

<div class="function_bar"><%= link_to 'New Competition', new_competition_path %></div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th>Start date</th>
      <th>Period</th>
      <th>Prize</th>
      <th>Prize num</th>
      <th>Poster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= competition.title %></td>
        <td><%= competition.desc %></td>
        <td><%= competition.start_date %></td>
        <td><%= competition.period %></td>
        <td><%= competition.prize %></td>
        <td><%= competition.prize_num %></td>
        <td><%= competition.poster %></td>
        <td><%= link_to 'Show', competition, target: "_blank" %></td>
        <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
        <td><%= link_to 'Delete', competition, method: :delete, data: { confirm: 'Do you want to delete this competition?' } %></td>
        <td><%= link_to 'Add videos', "show_videos?cid=#{competition.id}" %></td>
        <td><%= link_to 'Show videos list', video_cart_path(:cid => competition.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
