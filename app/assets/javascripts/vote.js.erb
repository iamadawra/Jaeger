$(function() {
  $(".video-vote a").click(function(e) {
    var u = $("#user-info").val();
    if (u) {
      var href = $(this).attr("url");
      $.ajax({
        url: href,
        method: 'PUT',
        success: function (data) {
          if (data.err == null) {
            $(".video-vote .like-vote-"+data.id).html(data.upvotes);
            $(".video-vote .unlike-vote-"+data.id).html(data.downvotes);
          }
        },
        error: function(xhr, status, error) {
          console.log("ajax error");
        }
      });
    } else alert("Please login to vote the video");
    e.preventDefault();
    return false;
  });
});