$(function() {
  $(".video-vote a").click(function(event) {
    var u = $("#user-info").val();
    if (u) {
      var href = $(this).attr("href");
      var method = $(this).attr("data-method");
      $.ajax({
        url: href,
        method: method,
        success: function (data) {
          $(".video-vote .like-vote-"+data.id).html(data.upvotes);
          $(".video-vote .unlike-vote-"+data.id).html(data.downvotes);
        },
        error: function(xhr, status, error) {
          console.log("ajax error");
        }
      });
    } else alert("Please login to vote the video");
    event.preventDefault();
    return false;
  });
});